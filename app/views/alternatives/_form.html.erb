<%= form_with(model: alternative) do |form| %>
  <% if alternative.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(alternative.errors.count, "error") %> prohibited this alternative from being saved:</h2>

      <ul>
        <% alternative.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :orginal_url, style: "display: block" %>
    <%= form.text_area :orginal_url %>
  </div>

  <div>
    <%= form.label :original_source, style: "display: block" %>
    <%= form.text_area :original_source %>
  </div>

  <div>
    <%= form.label :verified, style: "display: block" %>
    <%= form.check_box :verified %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.hidden_field :image, value: alternative.cached_image_data %>
    <%= form.file_field :image %>
  </div>

  <div class="form-field">
    <%= form.label :tag_list, style: "display: block" %>
    <%= form.text_field :tag_list %>
  </div>

  <div class="action">
    <%= form.submit %>
  </div>
<% end %>
